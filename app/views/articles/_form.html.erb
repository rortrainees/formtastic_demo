<%= semantic_form_for @article do |f| %>
  <%= f.inputs do %>
  <%= f.input :title, hint:'Make It Short And Please Be Specific', label: 'Title', input_html: { size: 20 } %>
  <%= f.input :description, hint: 'Try To Explain More', label: 'Description', input_html: { size: 50 } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
